.btn {border-radius:0;
    display: inline-block;
    padding: 15px 25px;
    min-width: 180px;
    width: auto;
    text-transform: none;
    cursor: pointer;
    background: #001a33;
    color: #fff!important;
    line-height: 1.6rem;
    text-decoration: none;
    letter-spacing: .16em;
    font-family: 'neuzeit-grotesk';
    font-weight: bold;
}
.btn span {letter-spacing:.1em!important;font-weight:400;color: #fff!important;}

.btn:hover {color:#eec09e;background: #001a33; }
.btn:hover span {color:#eec09e!important;background: #001a33; }

