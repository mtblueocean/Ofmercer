{% if order.metafields.custom_fields["pre-order_status"] != blank %}
  <div class="custom-field custom-field__pre-order-status custom-field__type--product-reference">
    <h3 class="custom-field--title">Pre-Order Status</h3>
    <div class="custom-field--value">  
    {% assign product_ref = all_products[order.metafields.custom_fields["pre-order_status"]] %}
    {{ product_ref.title | link_to: product_ref.url }}
    </div>
  </div>
{% endif %}