<header id="site-header">
	
	<div class="header-upper">     
     <div class="trigger mail-trigger"><a href="#wisepops"><i class="fa fa-envelope" aria-hidden="true"></i></a></div>
      
    <nav class="nav-left">
      <ul>
      {% for link in linklists.site-nav-left.links %}
        {% capture child_list_handle %}{{ link.title | handleize }}{% endcapture %}

	        {% if child_list_handle == 'shop' %}
						<li class="{{ child_list_handle }}">
							{{ link.title | link_to: link.url }}
							<div class="sub-menu">
							
								<div class="sub-menu-wrap">
									
									<div class="product-list">
                                      <h6>Categories</h6>
										
										{% for l in linklists.shop-by-product.links %}									
										{% assign pic = collections[l.handle].image %}
										{% assign desc = collections[l.handle].metafields.custom_fields['collection_tagline'] %}					
												
										<a class="link" href="{{ l.url}}" data-description="{{ desc }}" >{{ l.title }}{% if pic.size > 0 %}<img style="display:none;" src="{{ collections[l.handle].image | img_url: '410x' }}" />{% endif %}</a>
										{% endfor %}
									</div>
									
									<div class="collection-list">
										<h6>Features</h6>
										{% for l in linklists.shop-by-collection.links %}
										{% assign pic = collections[l.handle].image %}
										{% assign desc = collections[l.handle].metafields.custom_fields['collection_tagline'] %}												
										<a class="link" href="{{ l.url}}" data-description="{{ desc }}">{{ l.title }}{% if pic.size > 0 %}<img style="display:none;" src="{{ collections[l.handle].image | img_url: '410x' }}" />{% endif %}</a>
										{% endfor %}
									</div>								
	
									<div class="sub-img-2">
										{% assign featuredCol = settings.menu_featured_collection %}
										<a href="{{ collections[featuredCol].url }}">
											<img src="https://cdn.shopify.com/s/files/1/0186/9832/files/Holiday-Gift-Guide-Banner-Homepage1.jpg?1763207893158310879" />
                                          <h6>Shop the Holiday Gift Guide</h6>
                                            
										</a>
									</div>
																
								</div>
								
							</div>
						</li>
					{% else %}
						{% if linklists[child_list_handle] and linklists[child_list_handle].links.size > 0 %}
							<li class="{{ child_list_handle }}">
								{{ link.title | link_to: link.url }}
								<div class="sub-menu">
									{% for l in linklists[child_list_handle].links %}
									<a href="{{ l.url }}">{{ l.title }}</a>
									{% endfor %}
								</div>
							</li>
						{% else %}
						  <li class="{{ child_list_handle }}">{{ link.title | link_to: link.url }}</li>
						{% endif %}
					{% endif %}
        
      {% endfor %}
      </ul>
    </nav> 
	    
    <a class="logo" href="/" title="Of Mercer"></a>
	    
    <nav class="nav-right">
    
      
      <ul>
      {% for link in linklists.site-nav-right.links %}
        {% capture child_list_handle %}{{ link.title | handleize }}{% endcapture %}

	        {% if child_list_handle == 'shop' %}
						<li class="{{ child_list_handle }}">
							{{ link.title | link_to: link.url }}
							<div class="sub-menu">
							
								<div class="sub-menu-wrap">
									
									<div class="product-list">
										<span>/ Product</span>
										
										{% for l in linklists.shop-by-product.links %}									
										{% assign pic = collections[l.handle].image %}
										{% assign desc = collections[l.handle].metafields.metafield_template['collection_tagline'] %}					
												
										<a class="link t" href="{{ l.url}}" data-description="{{ desc }}" >{{ l.title }}{% if pic.size > 0 %}<img style="display:none;" src="{{ collections[l.handle].image | img_url: '410x' }}" />{% endif %}</a>
										{% endfor %}
									</div>
									
									<div class="collection-list">
										<span>/ Collection</span>
										{% for l in linklists.shop-by-collection.links %}
										{% assign pic = collections[l.handle].image %}
										{% assign desc = collections[l.handle].metafields.metafield_template['collection_tagline'] %}							
										
										<a class="link t" href="{{ l.url}}" data-description="{{ desc }}">{{ l.title }}{% if pic.size > 0 %}<img style="display:none;" src="{{ collections[l.handle].image | img_url: '410x' }}" />{% endif %}</a>
										{% endfor %}
									</div>	
									
									<div class="sub-img t">
										<a href="{{ collections.shop-all.url }}">
											<img src="{{ collections.shop-all.image | img_url: 'large' }}" />
											<span class="sub-img-description">{{ collections.shop-all.metafields.metafield_template['collection_tagline'] }}</span>
										</a>
									</div>								
	
									<div class="sub-img-2">
										{% assign featuredCol = settings.menu_featured_collection %}
										<a href="{{ collections[featuredCol].url }}">
											<img src="{{ collections[featuredCol].image | img_url: 'large' }}" />
											<span class="sub-img-description"> <span class="col-title">/ {{ collections[featuredCol].title }}:</span>{{ collections[featuredCol].metafields.metafield_template['collection_tagline'] }} </span>
										</a>
									</div>
																
								</div>
																								
							</div>
						</li>
					{% else %}
						{% if linklists[child_list_handle] and linklists[child_list_handle].links.size > 0 %}
							<li class="{{ child_list_handle }}">
								{{ link.title | link_to: link.url }}
								<div class="sub-menu">
									{% for l in linklists[child_list_handle].links %}
									<a href="{{ l.url }}">{{ l.title }}</a>
									{% endfor %}
								</div>
							</li>
						{% else %}
						  <li class="{{ child_list_handle }}">{{ link.title | link_to: link.url }}</li>
						{% endif %}
					{% endif %}
        
      {% endfor %}
      </ul>
    </nav>   
	    
    <ul class="utility-links">
      <li class="search-link">
        <i class="fa fa-search" aria-hidden="true"></i>
				<form class="search" action="/search">
					<input type="hidden" name="type" value="product" />
				  <input type="text" placeholder="Search" name="q" value="{{ search.terms | escape }}"  />
				  <!-- <input type="submit" value="Search" /> -->
				</form>
			</li>
			{% if shop.customer_accounts_enabled %}
        {% if customer %}
          <li class="account"><a href="{{ shop.url }}/account"><i class="fa fa-user" aria-hidden="true"></i></li>
        {% else %}
          <li class="login"><a href="{{ shop.url }}/account/login"><i class="fa fa-user" aria-hidden="true"></i></a></li>
        {% endif %}
      {% endif %}						
      <li class="mini-cart-trigger">
        <a href="/cart">
		      <i class="fa fa-shopping-bag {% if cart.item_count != 0 %} has-items {%endif%}" aria-hidden="true">
		        <span class="cart_count">{% if cart.item_count != 0 %}{{ cart.item_count }}{% endif %}</span>
	        </i>
        </a>
      </li>
    </ul>	      
    
    {% include 'mini-cart' %}

	</div>
	
	{% if template == 'blog.alternate' %}
		<div id="blog-tags">
			<ul>
			  {% for tag in blog.all_tags %}
			  {% if tag contains 'post-' %}
			  
			  {% else %}
			  <li>
			    <a href="{{ shop.url}}/blogs/{{ blog.handle }}/tagged/{{ tag | handleize }}">{{ tag }}</a>
			  </li>
			  {% endif %}
			  {% endfor %}
			</ul>
		</div>
	{% endif %}
	
</header>
