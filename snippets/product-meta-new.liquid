{% if product_meta_info['product_fabric'].size > 0 %}
  <div class="product-fabric show">
    {% assign product_fabric = product_meta_info['product_fabric'] %}
    <h6>Fabric &amp; Care <span>></span></h6>
    <div>{{ product_fabric }}</div>
  </div>
{% endif %}

{% if product_meta_info['product_fit'].size > 0 %}
  <div class="product-fit show">
    {% assign product_fit = product_meta_info['product_fit'] %}
    <h6>The Fit <span>></span></h6>
    <div>
      {{ product_fit }}
      {% if product_meta_info['product_fit_image'].size > 0 %}
        {% assign product_fit_image = product_meta_info['product_fit_image'] %}
        {{ product_fit_image }}
      {% endif %}
    </div>
  </div>
{% endif %}



{% if product_meta_info['product_facts'].size > 0 %}
  <div class="product-facts show">
    {% assign product_facts = product_meta_info['product_facts'] %}
    <h6>Special Facts <span>></span></h6>
    <div>{{ product_facts }}</div>
  </div>
{% endif %}

{% if product_meta_info['product_tip'].size > 0 %}
  <div class="product-tip show">
    {% assign product_tip = product_meta_info['product_tip'] %}
    <h6>Designer's Notes <span>></span></h6>
    <div>{{ product_tip }}</div>
  </div>
{% endif %}